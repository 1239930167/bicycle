/* pages/login/login.wxss */
.login-phone .title {
  margin: 152rpx 0 81rpx 0;
  font-size: 20px;
  text-align: center;
}
.login-phone .input-wrapper {
  margin-bottom: 28rpx;
  box-shadow: 0 1px 3px rgba(0, 0, 0, .1);
}
.phone-input {
  position: relative;
  height: 48rpx;
  padding: 32rpx 44rpx;
  background: #fff;
}
.phone-input .input {
  margin-right: 40rpx;
  font-size: 16px;
  color: #333;
}
.phone-input .close {
  position: absolute;
  right: 52rpx;
  top: 38rpx;
  font-size: 36rpx;
  color: #999;
}
.mfic{
  font-family: mofangicon!important;
  font-style: normal;
  -webkit-font-smoothing:antialiased;
  -webkit-text-stroke-width:.2px;
  -moz-osx-font-smoothing:grayscale;
}
input{
  display: block;
  height: 1.4rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICFontTextStyleBody;
  min-height: 1.4rem;
}

.login-phone .btn-wrapper {
  margin: 0 20rpx;
}
.mf-btn {
margin:0;
padding:17px 16px;
width:100%;
line-height:16px;
border-radius:2px;
cursor:pointer;
text-align:center;
vertical-align:middle;
background-image:none;
white-space:nowrap;
outline:none;
font-size:16px;
color:#fff;
background:#4a4c5b;
border:none;
box-sizing:border-box;
-webkit-tap-highlight-color:transparent;
}
.warning {
top:0;
left:0;
width:100%;
height:70rpx;
line-height:70rpx;
text-align:center;
background:#e64340;
opacity:0;
transition:all 0.3s;
}

